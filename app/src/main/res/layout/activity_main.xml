<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    tools:ignore="MissingConstraints">


    <TextView
        android:id="@+id/textview1"
        android:layout_width="323dp"
        android:layout_height="55dp"
        android:text="Do not linger to gather flowers to keep them"
        android:textColor="#10597A"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055" />

    <com.example.隐私评估安卓开发.RoundImageView
        android:id="@+id/picture"
        android:layout_width="143dp"
        android:layout_height="146dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.767"
        app:type="circle" />

    <EditText
        android:id="@+id/et"
        android:layout_width="111dp"
        android:layout_height="143dp"
        android:layout_marginBottom="448dp"
        android:background="@mipmap/note"
        android:gravity="center"
        android:hint="I Wanna Say..."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.223"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="492dp"
        android:background="@drawable/button_circle_shape"
        android:onClick="information"
        android:text="UPLOAD"
        app:icon="@drawable/ic_baseline_bookmark_border_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="321dp"
        android:layout_height="60dp"
        android:text="But walk on, for flowers will keep themselves blooming all your way"
        android:textColor="#10597A"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/button_circle_shape"
        android:backgroundTint="#4A766E"
        android:onClick="takePhoto"
        android:text="CAMERA"
        android:textSize="15sp"
        app:icon="@drawable/ic_baseline_photo_camera_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.989" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="#4A766E"
        android:scaleType="center"
        android:text="ALBUM"
        android:onClick="choosePhoto"
        android:textSize="15sp"
        android:background="@drawable/button_circle_shape"
        app:icon="@drawable/ic_baseline_photo_album_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.988" />


</androidx.constraintlayout.widget.ConstraintLayout>